extends layout

block content
  h1.mb-4= title
  form(method='POST' action=actionUrl)
    .mb-3
      label.form-label(for='name') Project Name:
      input#name.form-control(type='text' name='name' required value=project.name || '')
    .mb-3
      label.form-label(for='description') Description:
      textarea#description.form-control(name='description')= project.description || ''
    .mb-3
      label.form-label(for='price') Price:
      input#price.form-control(type='number' step='0.01' name='price' required value=project.price || '')
    .mb-3
      label.form-label(for='startDate') Start Date:
      input#startDate.form-control(type='date' name='startDate' required value=(project.startDate ? project.startDate.toISOString().split('T')[0] : ''))
    .mb-3
      label.form-label(for='endDate') End Date:
      input#endDate.form-control(type='date' name='endDate' required value=(project.endDate ? project.endDate.toISOString().split('T')[0] : ''))
    .mb-3
      label.form-label(for='completedWork') Completed Work:
      textarea#completedWork.form-control(name='completedWork' rows='4')= project.completedWork || ''
    .mb-3
      label.form-label Available Users:
      .d-flex.flex-wrap.gap-2.mb-2
        each user in availableUsers
          button.btn.btn-outline-secondary(type='button' data-id=user._id)
            span.user-name= user.name
            i.check-icon.ms-1 âœ“
      input#selectedUsers(type='hidden' name='teamMembers')
    button.btn.btn-primary(type='submit') Save Project
